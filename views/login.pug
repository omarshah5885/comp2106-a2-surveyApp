
extends layout

block content
  .container
    h1 Login
    form(method='POST', action='/users/login')
      #form-group
        label Email
        input.form-control(name='username',type='email')
      #form-group
        label Password:
        input.form-control(name='password',type='password')
      br
      button.btn.btn-primary(type='submit') Submit